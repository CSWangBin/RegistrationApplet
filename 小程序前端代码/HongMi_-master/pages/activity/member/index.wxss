.swiper{
    height:100%;
}

.member_list{
    height:100rpx;
    position:fixed;
    left:44rpx;
    right:44rpx;
    bottom:54rpx;
}
.head_list{
    height:100rpx;
    width:150%;
}
.member_list .head_list .item{
    width:100rpx;
    height:100rpx;
    display:flex;
    flex-direction:column;
    justify-content:center;
    float:left;
    margin-left:6rpx;
}
.member_list .head_list .item:first-child{
    margin-left:0;
}
.member_list .head_list .item image{
    display:block;
    width:76rpx;
    height:76rpx;
    margin:0 auto;
    border-radius:50%;
    border:4rpx solid transparent;
    transition:all .5s;
}
.member_list .head_list .default image{
     border:4rpx solid #fff; 
}
.member_list .head_list .active {
    margin:0 12rpx 0;
}
.member_list .head_list .active image{
    width:92rpx;
    height:92rpx;
    border:4rpx solid #fff; 
}

